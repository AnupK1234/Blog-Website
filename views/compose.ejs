<%- include('partials/header'); -%>
<h1 style="margin-left: 3rem;margin-top: 3rem;">Compose</h1>
<form action="/compose" method="post">

    <div class="form-group m-4 w-50">
        <label for="title">Title:</label>
        <input type="text" placeholder="Enter title" class="form-control" name="title">
    </div>

    <div class="form-group m-4 w-50">
        <label for="message">Post:</label>
        <textarea class="form-control" rows="3" placeholder="Enter message" name="message"></textarea>
    </div>

    <button type="submit" class="btn btn-primary m-4">Publish</button>

</form>
<%- include('partials/footer'); -%>